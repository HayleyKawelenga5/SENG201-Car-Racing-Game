<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng201.team0.gui.FinishScreenController">

   <!-- Background image -->
   <ImageView fitHeight="400" fitWidth="600" preserveRatio="false">
      <image>
         <Image url="@/images/background_image.png" />
      </image>
   </ImageView>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <GridPane layoutX="6.0" layoutY="5.0" prefHeight="392.0" prefWidth="594.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="playerNameLabel" style="-fx-background-color: rgba(255, 255, 255, 1);" text="Player Name : " GridPane.halignment="CENTER">
               <GridPane.margin>
                  <Insets bottom="400.0" right="100.0" top="100.0" />
               </GridPane.margin>
               <font>
                  <Font size="32.0" />
               </font></Label>
            <Label fx:id="seasonLengthLabel" style="-fx-background-color: rgba(255, 255, 255, 1);" text="Season Length : " GridPane.halignment="CENTER">
               <GridPane.margin>
                  <Insets bottom="200.0" right="100.0" />
               </GridPane.margin>
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <Label fx:id="playerRacesCompetedLabel" style="-fx-background-color: rgba(255, 255, 255, 1);" text="Races Completed : " GridPane.halignment="CENTER">
               <font>
                  <Font size="32.0" />
               </font>
               <GridPane.margin>
                  <Insets bottom="100.0" right="100.0" />
               </GridPane.margin></Label>
            <Label fx:id="playerAveragePlacingLabel" style="-fx-background-color: rgba(255, 255, 255, 1);" text="Average Position: " GridPane.halignment="CENTER">
               <GridPane.margin>
                  <Insets right="100.0" />
               </GridPane.margin>
               <font>
                  <Font size="32.0" />
               </font>
            </Label>
            <Label fx:id="playerPrizeMoneyLabel" style="-fx-background-color: rgba(255, 255, 255, 1);" text="Total Prize Money : " GridPane.halignment="CENTER">
               <GridPane.margin>
                  <Insets right="100.0" top="100.0" />
               </GridPane.margin>
               <font>
                  <Font size="32.0" />
               </font></Label>
            <Button fx:id="quitButton" mnemonicParsing="false" text="Quit" GridPane.halignment="RIGHT" GridPane.valignment="BOTTOM">
               <GridPane.margin>
                  <Insets bottom="40.0" right="40.0" />
               </GridPane.margin>
            </Button>
            <Label fx:id="playerTotalMoneyLabel" style="-fx-background-color: rgba(255, 255, 255, 1);" text="Total Player Money:">
               <font>
                  <Font size="32.0" />
               </font>
               <GridPane.margin>
                  <Insets left="100.0" top="200.0" />
               </GridPane.margin>
            </Label>
         </children>
      </GridPane>
   </children>
</AnchorPane>
</StackPane>
